<div class="row m-t-90">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title"><%= t '.change_your_password' %></div>
            </div>

            <div class="panel panel-body">

                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= devise_error_messages! %>

                <div class="form-group form-group-default required">
                    <%= f.label :password, t('.new_password') %>
                    <%= f.password_field :password, autocomplete: false, class: 'form-control' %>
                </div>

                <div class="form-group form-group-default required">
                    <%= f.label :password_confirmation, t('.confirm_new_password') %>
                    <%= f.password_field :password_confirmation, autocomplete: false, class: 'form-control' %>
                </div>

                <!-- <div class="form-group form-group-default"> -->
                <%= f.submit t('.change_my_password'), class: 'btn btn-primary btn-block' %>
                <!-- </div> -->
                <% end %>

                <%= render "devise/shared/links" %>

            </div>
        </div>
    </div>
</div>
