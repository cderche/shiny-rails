<h1>List of Orders</h1>
<h4><%= Order.count %>
    Orders</h4>

<table id="orders_table">
    <thead>
        <th>
            Status
        </th>
        <th>
            Duration
        </th>
        <th>
            Frequency
        </th>
        <th>
            Date
        </th>
        <th>
            Time
        </th>
        <th>
            Ironing
        </th>
        <th>
            Pets
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            Payment Status
        </th>
    </thead>
    <tbody>
        <% Order.all.each do |o| %>
        <tr>
            <td>
                <%= o.status %>
            </td>
            <td>
                <%= o.cart.duration %>
            </td>
            <td>
                <%= o.cart.frequency %>
            </td>
            <td>
                <%= o.cart.date %>
            </td>
            <td>
                <%= o.cart.time %>
            </td>
            <td>
                <%= o.cart.ironing %>
            </td>
            <td>
                <%= o.cart.pets %>
            </td>
            <td>
                <%= o.address.email %>
            </td>
            <td>
                <%= o.address.phone %>
            </td>
            <td>
                <%= o.notifications.last.category %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
