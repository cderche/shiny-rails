<table>
  <thead>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <td>Total Line Item Price</td>
      <td><%= @cart.total_line_items_price %></td>
    </tr>
    <tr>
      <td>Total Discount</td>
      <td><%= @cart.total_discount %></td>
    </tr>
    <tr>
      <td>Total Price</td>
      <td><%= @cart.total_price %></td>
    </tr>
  </tbody>
</table>

<% unless @cart.line_items.empty? %>
<h3>Line Items</h3>
<table>
  <thead>
    <th>Product</th>
    <th>Unit Cost</th>
    <th>Quantity</th>
    <th>Total Price</th>
    <th colspan="1"></th>
  </thead>
  <tbody>
    <% @cart.line_items.all.each do |line_item| %>
      <tr>
        <td><%= line_item.product.name %></td>
        <td><%= line_item.product.price %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.total_price %></td>
        <% if line_item.product.quantity_based? %>
        <td><%= button_to '-', line_item_path(line_item), method: :put, params: { line_item: { quantity: line_item.quantity - 1 } } if line_item.quantity > 1 %></td>
        <td><%= button_to '+', line_item_path(line_item), method: :put, params: { line_item: { quantity: line_item.quantity + 1 } } %></td>
        <% else %>
          <td colspan="2"></td>
        <% end %>
        <td><%= button_to 'Remove', line_item_path(line_item), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">Total Line Item Price</td>
      <td><%= @cart.total_line_items_price %></td>
    </tr>
  </tfoot>
</table>
<% end %>

<% unless @cart.discounts.empty? %>
<h3>Discount Items</h3>
<table>
  <thead>
    <th>Discount</th>
    <th>Type</th>
    <th>Amount</th>
    <th>Category</th>
    <th>Total Discount</th>
    <th colspan="1"></th>
  </thead>
  <tbody>
    <% @cart.discount_items.all.each do |discount_item| %>
      <tr>
        <td><%= discount_item.discount.name %></td>
        <td><%= discount_item.discount.discount_type %></td>
        <td><%= discount_item.discount.amount %></td>
        <td><%= discount_item.discount.category %></td>
        <td><%= discount_item.total_discount %></td>
        <td><%= button_to 'Remove', discount_item_path(discount_item), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="4">Total Discount</td>
      <td><%= @cart.total_discount %></td>
    </tr>
  </tfoot>
</table>
<% end %>

<% unless (Product.all - @cart.products).empty? %>
<h3>Available Products</h3>
<table>
  <thead>
    <th>Product</th>
    <th>Price</th>
    <th>Quantity Based</th>
    <th colspan="1"></th>
  </thead>
  <tbody>
    <% (Product.all - @cart.products).each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity_based %></td>
        <td><%= button_to 'Add to Cart', line_items_path(line_item: { product_id: product, cart_id: @cart }), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% unless (Discount.all - @cart.discounts).empty? %>
<h3>Available Discounts</h3>
<table>
  <thead>
    <th>Discount</th>
    <th>Type</th>
    <th>Amount</th>
    <th>Category</th>
    <th colspan="1"></th>
  </thead>
  <tbody>
    <% (Discount.all - @cart.discounts).each do |discount| %>
      <tr>
        <td><%= discount.name %></td>
        <td><%= discount.discount_type %></td>
        <td><%= discount.amount %></td>
        <td><%= discount.category %></td>
        <td><%= button_to 'Add to Cart', discount_items_path(discount_item: { discount_id: discount, cart_id: @cart }), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

