<p id="notice"><%= notice %></p>

<% unless @cart.line_items.empty? %>
<table>
  <thead>
    <th>Product</th>
    <th>Unit Cost</th>
    <th>Quantity</th>
    <th>Total Price</th>
    <th colspan="1"></th>
  </thead>
  <tbody>
    <% @cart.line_items.all.each do |line_item| %>
      <tr>
        <td><%= line_item.product.name %></td>
        <td><%= line_item.product.price %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.total_price %></td>
        <% if line_item.product.quantity_based? %>
        <td><%= button_to '-', line_item_path(line_item), method: :put, params: { line_item: { quantity: line_item.quantity - 1 } } if line_item.quantity > 1 %></td>
        <td><%= button_to '+', line_item_path(line_item), method: :put, params: { line_item: { quantity: line_item.quantity + 1 } } %></td>
        <% else %>
          <td colspan="2"></td>
        <% end %>
        <td><%= button_to 'Remove', line_item_path(line_item), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">Total Price</td>
      <td><%= @cart.total_price %></td>
    </tr>
  </tfoot>
</table>
<% end %>

<% unless (Product.all - @cart.products).empty? %>
<table>
  <thead>
    <th>Product</th>
    <th>Price</th>
    <th>Quantity Based</th>
    <th colspan="1"></th>
  </thead>
  <tbody>
    <% (Product.all - @cart.products).each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity_based %></td>
        <td><%= button_to 'Add to Cart', line_items_path(line_item: { product_id: product, cart_id: @cart }), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to 'Back', carts_path %>
