<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <%= t('discounts') %>
        </div>
        <div class="pull-right">
            <div class="col-xs-12">
              <%= link_to new_discount_path, class: 'btn btn-primary btn-sm' do %>
                <i class="pg-plus"></i> <%= t('discount') %>
              <% end %>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-condensed">
            <thead>
                <tr>
                  <th>Name</th>
                  <th>Coupon</th>
                  <th>Amount</th>
                  <th>Category</th>
                  <th></th>
                </tr>
            </thead>

            <tbody>
                <% @discounts.each do |discount| %>
                <tr>
                    <td><%= discount.name %></td>
                    <td>
                      <span class="label label-inverse"><%= discount.coupon %></td>
                    <td><%= discount.discount_type.to_sym == :fixed ? number_to_currency(discount.amount, locale: :ru) : number_to_percentage(discount.amount*100, precision: 0) %></td>
                    <td>
                      <span class="label"><%= discount.category %></span>
                    <td>
                        <div class="btn-group pull-right">
                            <%= link_to discount, class: 'btn btn-sm btn-default' do %>
                            <i class="pg-note"></i>
                            <% end %>
                            <%= link_to edit_discount_path(discount), class: 'btn btn-sm btn-default' do %>
                            <i class="pg-settings"></i>
                            <% end %>
                            <%= link_to discount, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-default' do %>
                            <i class="pg-trash"></i>
                            <% end %>
                        </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

