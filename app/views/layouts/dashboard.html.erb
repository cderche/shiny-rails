<!DOCTYPE html>
<html>
    <head>
        <%= csrf_meta_tags %>
        <%= yield :head %>
        <%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track' => true %>
    </head>

    <body>
        <%= link_to :products, products_path %> |
        <%= link_to :carts, carts_path %> |
        <%= link_to :line_items, line_items_path %> |
        <%= link_to :discounts, discounts_path %> |
        <%= link_to :discount_items, discount_items_path %> |
        <%= yield %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true, 'data-turbolinks-eval' => false %>
    </body>
</html>
