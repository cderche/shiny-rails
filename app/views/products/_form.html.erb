<%= form_for(product) do |f| %>
<% if product.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(product.errors.count, "error") %>
        prohibited this product from being saved:</h2>

    <ul>
        <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
</div>

<div class="field">
    <%= f.label :quantity_based %>
    <%= f.check_box :quantity_based %>
</div>

<table>
    <thead>
        <th>Locale</th>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity Based</th>
    </thead>
    <tbody>
        <% Product.globalize_locales.each do |locale| %>
        <tr>
            <td><%= locale %></td>
            <td><%= f.text_field "name_#{locale}" %></td>
            <td><%= f.text_field "description_#{locale}" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="actions">
    <%= f.submit %>
</div>
<% end %>
