<p id="notice"><%= notice %></p>

<p>
    <strong>Price:</strong>
    <%= @product.price %>
</p>

<p>
    <strong>Quantity Based:</strong>
    <%= @product.quantity_based %>
</p>

<table>
    <thead>
        <th>Locale</th>
        <th>Name</th>
        <th>Description</th>
    </thead>
    <tbody>
        <% @product.translations.each do |translation| %>
        <tr>
            <td><%= translation.locale %></td>
            <td><%= translation.name %></td>
            <td><%= translation.description %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Edit', edit_product_path(@product) %>
|
<%= link_to 'Back', products_path %>
