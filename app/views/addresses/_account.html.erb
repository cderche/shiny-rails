<div class="form-group-attached">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group form-group-default required">
                <%= f.label :firstname %>
                <%= f.text_field :firstname, class: "form-control" %>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group form-group-default required">
                <%= f.label :lastname %>
                <%= f.text_field :lastname, class: "form-control" %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group form-group-default required">
                <%= f.label :email %>
                <%= f.text_field :email, class: "form-control" %>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group form-group-default required">
                <%= f.label :phone %>
                <%= f.text_field :phone, class: "form-control" %>
            </div>
        </div>
    </div>

</div>

<div class="checkbox check-success">
    <%= f.check_box :terms %>
    <%= f.label :terms do %>
    <span><%= t('helpers.label.address.agree') %></span>
    <a href="#" data-toggle="modal" data-target="#terms"><%= t('helpers.label.address.terms') %></a>
    <% end %>
</div>
<p><%= t('address_form.cc_remarks') %></p>

<!-- Modal -->
<div class="modal fade fill-in" id="terms" tabindex="-1" role="dialog" aria-labelledby="modalFillInLabel" aria-hidden="true">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        <i class="pg-close"></i>
    </button>
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-left p-b-5">
                    <span class="semi-bold"><%= t('helpers.label.address.terms') %></span>
                </h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <%= render partial: "shared/terms/#{params[:locale]}" if params[:locale]%>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
