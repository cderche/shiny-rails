<!-- BEGIN HEADER -->
<nav class="header md-header white b-b b-grey" data-pages="header">
  <div class="container relative">
    <!-- BEGIN LEFT CONTENT -->
    <div class="pull-left">
      <!-- .header-inner Allows to vertically Align elements to the Center-->
      <div class="header-inner">
        <!-- BEGIN LOGO -->
        <%= link_to root_path do %>
        <!-- <%# image_tag 'shiny_logo_old.png', class: 'logo', height: 24 %> -->
        <%= inline_svg 'shiny-logo.svg', height: 24, class: 'logo fill-primary' %>
        <% end %>
      </div>
    </div>
    <!-- BEGIN HEADER TOGGLE FOR MOBILE & TABLET -->
    <div class="pull-right">
      <div class="header-inner">
        <div class="visible-sm-inline visible-xs-inline menu-toggler pull-right p-l-10" data-pages="header-toggle" data-pages-element="#header">
          <div class="one"></div>
          <div class="two"></div>
          <div class="three"></div>
        </div>
      </div>
    </div>
    <!-- END HEADER TOGGLE FOR MOBILE & TABLET -->
    <!-- BEGIN RIGHT CONTENT -->
    <div class="menu-content pull-right clearfix" data-pages-direction="slideRight" id="header">
      <!-- BEGIN HEADER CLOSE TOGGLE FOR MOBILE -->
      <div class="pull-right">
        <a href="#" class="padding-10 visible-xs-inline visible-sm-inline pull-right m-t-10 m-b-10 m-r-10" data-pages="header-toggle" data-pages-element="#header">
          <i class="text-black pg-close_line"></i>
        </a>
      </div>
      <!-- END HEADER CLOSE TOGGLE FOR MOBILE -->
      <div class="p-t-10 p-b-10 clearfix m-b-5 hidden-xs hidden-sm">
        <div class="pull-right fs-12 header-links">
          <%= link_to t('english'), url_for(locale: 'en'), class: 'm-r-15 link', data: { turbolinks: false } if I18n.locale == :ru %>
          <%= link_to t('russian'), url_for(locale: 'ru'), class: 'm-r-15 link', data: { turbolinks: false } if I18n.locale == :en %>

          <a href="tel:<%= ENV['PHONE_NUMBER'] %>" class="link m-r-15"><%= ENV['PHONE_NUMBER'] %></a>

          <a class="link m-r-5" href="https://api.whatsapp.com/send?phone=<%= ENV['PHONE_NUMBER_PLAIN'] %>" target="_blank">
            <i class="fa fa-whatsapp"></i>
          </a>
          <a class="link m-r-5" href="https://t.me/ShinyTeam" target="_blank">
            <i class="fa fa-telegram"></i>
          </a>
          <a class="link" href="skype:+<%= ENV['PHONE_NUMBER_PLAIN'] %>?chat" target="_blank">
            <i class="fa fa-skype"></i>
          </a>
        </div>
      </div>
      <!-- BEGIN MENU ITEMS -->

      <ul class="menu hidden-md hidden-lg">
        <li>
          <%= login_link %>
        </li>
        <li>
          <%= link_to t('menu.about') , about_path            , class: 'link' , data: { turbolinks: false } %>
        </li>
        <li>
          <%= link_to t('menu.qa')    , questions_path            , class: 'link' , data: { turbolinks: false } %>
        </li>
        <li>
          <%= link_to t('menu.blog')  , "http://blog.getshiny.ru" , class: "link" , target: '_blank' %>
        </li>
        <li>
          <%= link_to t('english'), url_for(locale: 'en'), class: 'link', data: { turbolinks: false } if I18n.locale == :ru %>
          <%= link_to t('russian'), url_for(locale: 'ru'), class: 'link', data: { turbolinks: false } if I18n.locale == :en %>
        </li>
        <% if user_signed_in? %>
        <li class="social">
          <!-- <%= link_to t('logout'), destroy_user_session_path, method: :delete, class: 'link text-red' if user_signed_in? %> -->
          <%= link_to destroy_user_session_path, method: :delete, class: 'link' do %>
            <i class="fa fa-sign-out text-red"></i>
            <span class="hidden-xs font-lato text-red">
              <%= t('logout') %></span>
          <% end %>
        </li>
        <% end %>

        <li class="social">
          <a class="link" href="https://api.whatsapp.com/send?phone=<%= ENV['PHONE_NUMBER_PLAIN'] %>" target="_blank">
            <i class="fa fa-whatsapp"></i>
            <span class="hidden-xs font-lato">
              Whatsapp</span>
          </a>
        </li>
        <li class="social">
          <a class="link" href="https://t.me/ShinyTeam" target="_blank">
            <i class="fa fa-telegram"></i>
            <span class="hidden-xs font-lato">
              Telegram</span>
          </a>
        </li>

        <li class="social">
          <a class="link" href="skype:+<%= ENV['PHONE_NUMBER_PLAIN'] %>?chat" target="_blank">
            <i class="fa fa-skype"></i>
            <span class="hidden-xs font-lato">
              Skype</span>
          </a>
        </li>

        <li class="social">
          <a class="link" href="https://www.facebook.com/getshinyrus" target="_blank">
            <i class="fa fa-facebook"></i>
            <span class="hidden-xs font-lato">
              Facebook</span>
          </a>
        </li>

        <li class="social">
          <a class="link" href="https://www.instagram.com/getshiny" target="_blank">
            <i class="fa fa-instagram"></i>
            <span class="hidden-xs font-lato">
              Instagram</span>
          </a>
        </li>

        <li class="social">
          <a class="link" href="https://plus.google.com/100339362875734932916" target="_blank">
            <i class="fa fa-google-plus"></i>
            <span class="hidden-xs font-lato">
              Google+</span>
          </a>
        </li>
      </ul>

      <ul class="menu hidden-xs hidden-sm">
        <li>
          <%= link_to t('menu.about') , about_path            , class: 'link' , data: { turbolinks: false } %>
        </li>
        <li>
          <%= link_to t('menu.qa')    , questions_path            , class: 'link' , data: { turbolinks: false } %>
        </li>
        <li>
          <%= link_to t('menu.blog')  , "http://blog.getshiny.ru" , class: "link" , target: '_blank' %>
        </li>
      </ul>
      <%= login_button %>
      <% if user_signed_in? %>
      <%= link_to destroy_user_session_path, method: :delete, class: 'm-l-10 hidden-xs hidden-sm' do %>
        <i class="fa fa-sign-out text-red"></i>
      <% end %>
      <% end %>
      <!-- END MENU ITEMS -->
    </div>
  </div>
</nav>
