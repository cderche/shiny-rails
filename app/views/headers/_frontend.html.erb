<div class="header-md-height"></div>

<!-- Modal -->
<div class="modal fade slide-up disable-scroll" id="modalAuth" tabindex="-1" role="dialog" aria-labelledby="modalSlideUpLabel" aria-hidden="false">
  <div class="modal-dialog">
    <div class="modal-content-wrapper">
      <div class="modal-content">
        <div class="modal-header clearfix text-left">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            <i class="pg-close"></i>
          </button>
        </div>
        <div class="modal-body">
          <div class="hidden-xs p-t-50"></div>
          <h3 class="text-center block-title">
            <i class="fa fa-user-circle-o fa-3x"></i>
          </h3>
          <div class="hidden-xs p-t-40"></div>
          <div class="row text-center">
            <div class="col-sm-6">
              <%= link_to t('new_customer'), clean_path, class: "btn btn-lg btn-bordered btn-black block-title btn-block", data: { turbolinks: false } %>
            </div>
            <div class="hidden-sm hidden-md hidden-lg p-t-20"></div>
            <div class="col-sm-6">
              <%= link_to t('existing_customer'), new_user_session_path, class: "btn btn-lg btn-bordered btn-black block-title btn-block", data: { turbolinks: false } %>
            </div>
          </div>
          <div class="hidden-xs p-t-50"></div>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
  </div>
  <!-- /.modal-dialog -->
</div>
