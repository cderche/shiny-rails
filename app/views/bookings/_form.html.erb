<%= form_for @booking do |f| %>

<%= render partial: "./errors", locals: { object: @booking } %>

<%= hidden_field_tag "booking[extra_ids][]", nil %>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title"><%= t('booking.titles.home') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "service", locals: { f: f } %>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title"><%= t('booking.titles.frequency') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "frequency", locals: { f: f } %>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title"><%= t('booking.titles.when') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "datetime", locals: { f: f } %>
    </div>
</div>

<% if !user_signed_in? %>
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
          <%= t('booking.titles.account') %>
        </h4>
        <span class="pull-right">
          <%= link_to t('already_have_an_account?'), new_user_session_path, class: 'text-complete' %>
        </span>
    </div>
    <div class="panel-body">
        <%= render partial: "user", locals: { f: f } %>
    </div>
</div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title"><%= t('booking.titles.address') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "address", locals: { f: f } %>
    </div>
</div>

<div class="panel panel-default" id="extras_panel">
    <div class="panel-heading">
        <h4 class="panel-title"><%= t('booking.titles.additional') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "extras", locals: { f: f } %>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title"><%= t('booking.titles.notes') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "notes", locals: { f: f } %>
        <br>
        <br>
        <%= f.submit class: "btn btn-primary btn-cons btn-lg full-width" %>
        <!-- <a href="#" class="btn btn-primary btn-cons btn-lg full-width" data-toggle="modal" data-target="#payment_modal"><%= t('payment_details') %></a> -->
    </div>
</div>


<%# render partial: 'payment_modal', locals: { f: f } %>

<% end %>
