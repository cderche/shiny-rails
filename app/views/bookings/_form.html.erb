</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center"><%= t('booking.titles.notes') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "notes", locals: { f: f } %>
        <br>
        <br>
        <%= f.submit class: "btn btn-primary btn-cons btn-lg full-width" %>
    </div>
</div>

<% end %>
