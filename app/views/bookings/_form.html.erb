<%= form_for @booking do |f| %>

<%= render partial: "./errors", locals: { object: @booking } %>

<%= hidden_field_tag "booking[extra_ids][]", nil %>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center"><%= t('booking.titles.home') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "service", locals: { f: f } %>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center"><%= t('booking.titles.frequency') %></h4>
    </div>
