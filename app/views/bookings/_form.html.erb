        <%= render partial: "frequency", locals: { f: f } %>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center"><%= t('booking.titles.when') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "datetime", locals: { f: f } %>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center"><%= t('booking.titles.account') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "user", locals: { f: f } %>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center"><%= t('booking.titles.address') %></h4>
    </div>
    <div class="panel-body">
        <%= render partial: "address", locals: { f: f } %>
    </div>
</div>

<div class="panel panel-default">
