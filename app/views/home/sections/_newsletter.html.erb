<section class="p-b-50 p-t-50 bg-white b-b b-grey">
    <div class="container">
        <form id="newsletter_form">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <h6 class="block-title m-b-0 text-center"><%= t('beta.section6.title') %></h6>
                    <h1 class="text-center m-t-5"><%= t('beta.section6.subtitle') %></h1>
                    <p class="small hint-text p-t-0 text-center"><%= t('beta.section6.text') %></p>
                </div>
            </div>
            <div class="row m-t-20">
                <div class="col-xs-10 col-sm-6 col-lg-4 col-xs-offset-1 col-sm-offset-3 col-lg-offset-4">

                    <div class="form-group form-group-default input-group bg-transparent b-a b-transparent-black">
                        <label class="control-label">Email</label>
                        <input type="email" name="email" id="newsletter_email" class="form-control" placeholder="you@domain.com">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-master m-r-10 btn-cons"><%= t('beta.section6.button') %></button>
                        </span>
                    </div>

                </div>
            </div>
        </form>
        <div id="newsletter_message" style="display:none;" class="text-center">
            <i class="fa fa-check fa-4x"></i>
            <h3><%= t('beta.section6.thank_you.title') %></h3>
            <h5 class="block-title"><%= t('beta.section6.thank_you.subtitle') %></h5>
        </div>
    </div>
</section>
