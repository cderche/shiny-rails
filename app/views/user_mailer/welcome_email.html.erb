<table width="100%" cellpadding="0" cellspacing="0">
    <tr>
        <td class="content-block">
            <%= t('.greeting', name: @user.firstname) %>
        </td>
    </tr>
    <tr>
        <td class="content-block">
            <%= t('.content', username: @user.email) %>
        </td>
    </tr>
    <tr>
        <td class="content-block">
            <%= t('.link') %>
            <%= link_to t('login'), new_user_session_url %>
        </td>
    </tr>
    <tr>
        <td class="content-block">
            <%= t('.thank_you') %>
        </td>
    </tr>
    <tr>
        <td class="content-block">
            <%= t('.signature') %>
            <br>
            <%= mail_to ENV['SUPPORT_EMAIL'] %>
        </td>
    </tr>
</table>
