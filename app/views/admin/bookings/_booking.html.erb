<style media="screen">
  .special-disabled {
    background-color: white !important;
    color: #3B4752 !important;
    border-color: #3B4752 !important;
  }
</style>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <%= render 'form' %>
      </div>
    </div>
    <div class="btn-group">
      <%= link_to 'Edit', edit_admin_booking_path(@booking), class: 'btn btn-primary' if @readonly %>
      <%= link_to 'Invoice', new_admin_invoice_path(booking_id: @booking), class: 'btn btn-info' if @readonly %>
      <%= link_to 'Cancel', toggle_admin_booking_path(@booking), class: 'btn btn-danger' if @readonly && @booking.active %>
      <%= link_to 'Activate', toggle_admin_booking_path(@booking), class: 'btn btn-success' if @readonly && !@booking.active %>
    </div>
  </div>
</div>
