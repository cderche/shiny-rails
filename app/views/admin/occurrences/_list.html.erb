<table class="table table-condensed">
  <thead>
    <tr>
      <!-- <th>Identifier</th> -->
      <th>Status</th>
      <th>Date</th>
      <th>Time</th>
      <th>Customer</th>
      <th>Professional</th>
      <th>Amount Due</th>
      <th>Payout</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% occurrences.each do |occurrence| %>
    <tr>
      <!-- <td><%# link_to booking.try('order_token'), admin_booking_path(booking) %></td> -->
      <!-- <td><%= "R" unless occurrence.new_record? %></td> -->
      <td><%= format_status_label(occurrence.status) %></td>
      <td><%= occurrence.date.strftime("%a, %b %d %Y") %></td>
      <td><%= occurrence.time %></td>
      <td><%= link_to occurrence.user.try('sort_name'), [:admin, occurrence.user] %></td>
      <td><%= link_to occurrence.professional.try('sort_name'), [:admin, occurrence.professional] %></td>
      <td><%= number_to_currency(occurrence.amount_due, unit: '₽') %></td>
      <td><%= number_to_currency(occurrence.pay_out, unit: '₽') %></td>
      <td>
        <!-- <%# link_to [:admin, booking], class: 'btn btn-complete btn-sm' do %>
          <i class="fa fa-info"></i>
        <%# end %> -->
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%# paginate bookings, remote: true %>
</div>
