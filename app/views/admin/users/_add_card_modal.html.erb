<!-- Modal -->
<div class="modal fade slide-up disable-scroll" id="add_card_modal" tabindex="-1" role="dialog" aria-labelledby="modalSlideUpLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content-wrapper">
        <div class="modal-content">
            <div class="modal-header clearfix text-left">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                  <i class="pg-close fs-14"></i>
                </button>
                <h5>Add a new card</h5>
            </div>
            <div class="modal-body text-center">
                <p>Send this link to the customer</p>
                <%= text_field_tag :url, @url, readonly: true, class: 'form-control' %>
                <p class="text-danger small">This link expires after 30 minutes.</p>
            </div>
        </div>
        </div>
        <!-- /.modal-content -->
    </div>
</div>
<!-- /.modal-dialog -->
